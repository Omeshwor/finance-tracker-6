<h4>Your friends</h4>
<table class="table table-bordered table-info table-hover col-9">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @tracked_friend.each do |friend| %>
            <tr>
                <td><%= friend.first_name %></td>
                <td><%= friend.last_name %></td>
                <td><%= friend.email %></td>
                <td><%= link_to 'Remove friend', friendship_path(friend), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-warning" %></td>
            </tr>
        <% end %>
    </tbody>
</table>
